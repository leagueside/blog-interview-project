<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Blog:</strong>
  <%= @post.blog.title %>
</p>

  <strong>Create Comment</Strong>
  <%= form_with(model: Comment.new, local: true) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div hidden class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, :value => 2%>
  

  
    <%= form.label :post_id %>
    <%= form.text_field :post_id, :value => @post.id%>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



  <strong>Comments:</strong>
  <ul>
    <% @post.comments.each do |comment| %>
      <li><%= comment.user.name%>
      <li><%= comment.body %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Favorited by:</strong>
  <ul>
    <% @post.favorites.each do |favorite| %>
      <li><%= favorite.user.name %></li>
    <% end %>
  </ul>
  <%= link_to 'Add Favorite', new_favorite_path %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', @post.blog %>
